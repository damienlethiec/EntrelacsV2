<% content_for :page_header do %>
  <h1 class="text-3xl font-bold tracking-tight text-gray-900">Tableau de bord</h1>
<% end %>

<div class="rounded-lg bg-white p-6 shadow">
  <h2 class="text-lg font-medium text-gray-900">Bienvenue, <%= current_user.first_name %> !</h2>
  <p class="mt-2 text-sm text-gray-500">
    <% if current_user.admin? %>
      Vous êtes connecté en tant qu'administrateur.
    <% else %>
      Vous êtes tisseur de la résidence <strong><%= current_user.residence&.name || "non assignée" %></strong>.
    <% end %>
  </p>
</div>
