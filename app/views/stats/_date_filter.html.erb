<div class="bg-white rounded-xl shadow-sm p-4 mb-8 border border-gray-100">
  <%= form_with url: request.path, method: :get, class: "space-y-4" do |f| %>
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-3">
      <div>
        <%= f.label :start_date, t("stats.filters.start_date"), class: "block text-sm/6 font-medium text-gray-900 mb-1" %>
        <%= f.date_field :start_date, value: @start_date,
            class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-tisseurs-teal sm:text-sm/6" %>
      </div>
      <div>
        <%= f.label :end_date, t("stats.filters.end_date"), class: "block text-sm/6 font-medium text-gray-900 mb-1" %>
        <%= f.date_field :end_date, value: @end_date,
            class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-tisseurs-teal sm:text-sm/6" %>
      </div>
    </div>
    <div class="flex gap-2">
      <%= f.submit t("stats.filters.apply"),
          class: "rounded-md bg-tisseurs-teal px-3 py-2 text-sm font-semibold text-white shadow-xs hover:bg-tisseurs-teal-dark focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-tisseurs-teal cursor-pointer" %>
      <%= link_to t("stats.filters.reset"), request.path,
          class: "rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-xs ring-1 ring-inset ring-gray-300 hover:bg-gray-50" %>
    </div>
  <% end %>

  <div class="flex flex-wrap items-center gap-x-3 gap-y-1 mt-4 pt-4 border-t border-gray-100">
    <span class="text-sm text-gray-500"><%= t("stats.filters.quick") %> :</span>
    <%= link_to t("stats.filters.last_7_days"), url_for(start_date: 7.days.ago.to_date, end_date: Date.current),
                class: "text-sm font-medium text-tisseurs-teal hover:text-tisseurs-teal-dark hover:underline" %>
    <%= link_to t("stats.filters.last_30_days"), url_for(start_date: 30.days.ago.to_date, end_date: Date.current),
                class: "text-sm font-medium text-tisseurs-teal hover:text-tisseurs-teal-dark hover:underline" %>
    <%= link_to t("stats.filters.last_90_days"), url_for(start_date: 90.days.ago.to_date, end_date: Date.current),
                class: "text-sm font-medium text-tisseurs-teal hover:text-tisseurs-teal-dark hover:underline" %>
    <%= link_to t("stats.filters.this_year"), url_for(start_date: Date.current.beginning_of_year, end_date: Date.current),
                class: "text-sm font-medium text-tisseurs-teal hover:text-tisseurs-teal-dark hover:underline" %>
  </div>
</div>
