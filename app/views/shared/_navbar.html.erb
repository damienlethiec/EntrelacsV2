<nav class="border-b border-gray-200 bg-white" data-controller="mobile-menu">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="flex h-16 justify-between">
      <div class="flex">
        <div class="flex shrink-0 items-center">
          <%= link_to root_path do %>
            <%= image_tag "logo.png", alt: "Entrelacs", class: "h-8 w-auto" %>
          <% end %>
        </div>
        <div class="hidden sm:-my-px sm:ml-6 sm:flex sm:space-x-8">
          <% if current_user.admin? %>
            <%= nav_link_to t("nav.stats"), stats_path %>
            <%= nav_link_to t("nav.users"), admin_users_path %>
            <%= nav_link_to t("nav.residences"), residences_path %>
          <% elsif current_user.weaver? && current_user.residence.present? %>
            <%= nav_link_to t("nav.activities"), residence_activities_path(current_user.residence) %>
            <%= nav_link_to t("nav.residents"), residence_residents_path(current_user.residence) %>
            <%= nav_link_to t("nav.residences"), residences_path %>
          <% end %>
        </div>
      </div>

      <div class="hidden sm:ml-6 sm:flex sm:items-center">
        <div class="relative ml-3">
          <div class="flex items-center gap-4">
            <span class="text-sm text-tisseurs-gray"><%= current_user.full_name %></span>
            <%= button_to "Déconnexion", destroy_user_session_path, method: :delete,
                class: "text-sm font-medium text-tisseurs-gray hover:text-tisseurs-teal cursor-pointer" %>
          </div>
        </div>
      </div>

      <div class="-mr-2 flex items-center sm:hidden">
        <button type="button" data-action="mobile-menu#toggle"
                class="relative inline-flex items-center justify-center rounded-md bg-white p-2 text-gray-400 hover:bg-gray-100 hover:text-gray-500 focus:outline-2 focus:outline-offset-2 focus:outline-tisseurs-teal">
          <span class="absolute -inset-0.5"></span>
          <span class="sr-only">Ouvrir le menu</span>
          <svg class="size-6" data-mobile-menu-target="openIcon" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
          </svg>
          <svg class="hidden size-6" data-mobile-menu-target="closeIcon" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18 18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
    </div>
  </div>

  <div class="hidden sm:hidden" data-mobile-menu-target="menu">
    <div class="space-y-1 pt-2 pb-3">
      <% if current_user.admin? %>
        <%= mobile_nav_link_to t("nav.stats"), stats_path %>
        <%= mobile_nav_link_to t("nav.users"), admin_users_path %>
        <%= mobile_nav_link_to t("nav.residences"), residences_path %>
      <% elsif current_user.weaver? && current_user.residence.present? %>
        <%= mobile_nav_link_to t("nav.activities"), residence_activities_path(current_user.residence) %>
        <%= mobile_nav_link_to t("nav.residents"), residence_residents_path(current_user.residence) %>
        <%= mobile_nav_link_to t("nav.residences"), residences_path %>
      <% end %>
    </div>
    <div class="border-t border-gray-200 pt-4 pb-3">
      <div class="flex items-center px-4">
        <div class="shrink-0">
          <span class="inline-flex size-10 items-center justify-center rounded-full bg-tisseurs-teal">
            <span class="text-sm font-medium text-white"><%= current_user.first_name[0] %><%= current_user.last_name[0] %></span>
          </span>
        </div>
        <div class="ml-3">
          <div class="text-base font-medium text-gray-800"><%= current_user.full_name %></div>
          <div class="text-sm font-medium text-gray-500"><%= current_user.email %></div>
        </div>
      </div>
      <div class="mt-3 space-y-1">
        <%= button_to "Déconnexion", destroy_user_session_path, method: :delete,
            class: "block w-full text-left px-4 py-2 text-base font-medium text-gray-500 hover:bg-gray-100 hover:text-gray-800 cursor-pointer" %>
      </div>
    </div>
  </div>
</nav>
