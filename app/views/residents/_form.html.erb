<%= form_with model: [@residence, resident], class: "space-y-6" do |f| %>
  <% if resident.errors.any? %>
    <div class="rounded-md bg-red-50 p-4">
      <div class="flex">
        <div class="shrink-0">
          <svg class="size-5 text-red-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.28 7.22a.75.75 0 00-1.06 1.06L8.94 10l-1.72 1.72a.75.75 0 101.06 1.06L10 11.06l1.72 1.72a.75.75 0 101.06-1.06L11.06 10l1.72-1.72a.75.75 0 00-1.06-1.06L10 8.94 8.28 7.22z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800"><%= t("errors.messages.not_saved", count: resident.errors.count) %></h3>
          <div class="mt-2 text-sm text-red-700">
            <ul role="list" class="list-disc space-y-1 pl-5">
              <% resident.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
    <div>
      <%= f.label :first_name, class: "block text-sm/6 font-medium text-gray-900" %>
      <div class="mt-2">
        <%= f.text_field :first_name,
            class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-tisseurs-teal sm:text-sm/6" %>
      </div>
    </div>

    <div>
      <%= f.label :last_name, class: "block text-sm/6 font-medium text-gray-900" %>
      <div class="mt-2">
        <%= f.text_field :last_name,
            class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-tisseurs-teal sm:text-sm/6" %>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
    <div>
      <%= f.label :email, class: "block text-sm/6 font-medium text-gray-900" %>
      <div class="mt-2">
        <%= f.email_field :email,
            class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-tisseurs-teal sm:text-sm/6" %>
      </div>
      <p class="mt-1 text-sm text-gray-500"><%= t("residents.form.email_hint") %></p>
    </div>

    <div>
      <%= f.label :phone, class: "block text-sm/6 font-medium text-gray-900" %>
      <div class="mt-2">
        <%= f.telephone_field :phone,
            class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-tisseurs-teal sm:text-sm/6" %>
      </div>
    </div>
  </div>

  <div>
    <%= f.label :apartment, class: "block text-sm/6 font-medium text-gray-900" %>
    <div class="mt-2">
      <%= f.text_field :apartment,
          class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-tisseurs-teal sm:text-sm/6 sm:max-w-xs" %>
    </div>
  </div>

  <div>
    <%= f.label :notes, class: "block text-sm/6 font-medium text-gray-900" %>
    <div class="mt-2">
      <%= f.text_area :notes, rows: 4,
          class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-tisseurs-teal sm:text-sm/6" %>
    </div>
    <p class="mt-1 text-sm text-gray-500"><%= t("residents.form.notes_hint") %></p>
  </div>

  <div class="flex items-center justify-end gap-x-4">
    <%= link_to t("helpers.cancel"), residence_residents_path(@residence),
        class: "text-sm/6 font-semibold text-gray-900 hover:text-gray-700" %>
    <%= f.submit class: "rounded-md bg-tisseurs-teal px-3 py-2 text-sm font-semibold text-white shadow-xs hover:bg-tisseurs-teal-dark focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-tisseurs-teal cursor-pointer" %>
  </div>
<% end %>
